
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model SchoolProj.DLL.Model.UserModel
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="~/Content/template/img/Avatarimage.png" alt="Profile Picture" class="img-fluid rounded-circle">
        </div>
        <div class="col-md-8">
            <h2>Admin Profile</h2>
            <hr>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Name:</strong>@Model.FullName</p>
                    <p><strong>Email:</strong>@Model.UserName</p>
                    <p><strong>Location:</strong>Amman-Jordan</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Age:</strong>28</p>
                    <p><strong>Interests:</strong>Web Development</p>
                </div>
            </div>
        </div>
    </div>
</div>

